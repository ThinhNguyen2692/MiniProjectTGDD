@using ModelProject.ViewModel;
@model ProductPhotoViewModel;

<div class="content-wrapper">
    <div class="grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4></h4>
                <h4 class="card-title">Thêm ảnh cho sản phẩm</h4>
                <form class="forms-sample" id="form-Product" method="post" enctype="multipart/form-data" action="/AddPhoto">

                    <div class="form-group">
                        <label>Tên sản phẩm</label>
                         <input asp-for="@Model.ProductVerSionName" readonly />
                    </div>
                    <div class="form-group">
                        <label>Mã sản phẩm</label>
                         <input asp-for="@Model.ProductVersionId" readonly />
                    </div>
                    <div class="form-group">
                        <label>Chọn hình: </label>
                        <input asp-for="@Model.photoViewModel.photos" class="form-control"  accept="image/*" multiple />
                    </div>
                    <button type="submit" id="btn-submit" class="btn btn-gradient-primary me-2">Thêm mới</button>
                    <button type="reset" class="btn btn-light">Làm mới</button>
                </form>

                <div style="margin-top: 40px; margin-bottom: 40px;"></div>

                <div  class="row">
                    @{
                       
                            foreach (var value in Model.photoViewModel.informationPhoto)
                            {
                                     <div class="col-3">
                                    <img style="width: 160px; height: 160px;" src="/images/@value.PathImage"/>
                                    <div><span>@value.PathImage</span></div>
                                    </div>
                            }
                    }
                </div>
               
            </div>
        </div>  
    </div>
</div>