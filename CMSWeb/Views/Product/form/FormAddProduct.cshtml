@using DAL.Models;
@using CMSWeb.Models;
@using CMSWeb.ViewModels.ProductViewModel;
@model AddProductViewModel;

<div class="content-wrapper">
    <div style="width: 1200px; margin: auto;" class="grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @switch (Model.messageAdd)
                {
                    case true: <div class="alert alert-success">Cập nhật thất bại</div> break;
                    default: <div></div> break;
                }
                <h4 class="card-title">Nhập thông tin sản phẩm mới</h4>
                <form class="forms-sample form-Product" method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="AddProduct">
                    <div class="form-group">
                        <label for="exampleInputUsername1">Mã sản phẩm</label>
                        <input class="form-control ProductId" asp-for="@Model.ProductItem.ProductId" />
                         <div class="valid-feedback">
                            Chính xác
                        </div>
                        <div class="invalid-feedback">
                            Mã thương hiệu: a-z,A-Z,0-9 
                        </div>
                    </div>
                    <div class="form-group">
                        <label >Tên sản phẩm</label>
                        <input class="form-control ProuctName" asp-for="@Model.ProductItem.ProuctName"/>
                         <div class="valid-feedback">
                            Chính xác
                        </div>
                        <div class="invalid-feedback">
                            Không được bỏ trống
                        </div>
                    </div>
                     <div class="form-group">
                         <label >Ngành hàng</label>
                        <select class="form-control" asp-for="@Model.ProductItem.ProductType">
                           @{
                                for (int i = 0; i < Model.ListproductTypes.Count; i++)
                                {
                                    <option value="@Model.ListproductTypes[i].Typeid">@Model.ListproductTypes[i].Typename</option>
                                }
                            }
                        </select>
                    </div> 
                    <div class="form-group">
                         <label >Thương hiệu</label>
                        <select class="form-control" asp-for="@Model.ProductItem.ProductBrand">
                            @{
                                for (int i = 0; i < Model.ListproductBrands.Count; i++)
                                {
                                    <option value="@Model.ListproductBrands[i].BrandId">@Model.ListproductBrands[i].BrandName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Chọn hình: </label>
                        <br />
                        <input class="form-control fileImage" asp-for="@Model.FileImage" />
                        <br />
                        <img id="preview" src="#" width="auto" height="auto" class="hidden" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nhập mô tả cho</label>
                        <textarea style="height: 100px;" asp-for="@Model.ProductItem.ProductDescription" class="form-control" placeholder="Nhập mô tả cho thương hiệu..." ></textarea>
                    </div>
                     <div class="form-group">
                        <label >Thời gian ra mắt</label>
                        <input asp-for="@Model.ProductItem.ReleaseTime" class="form-control" />
                    </div>
                     <button type="submit" id="btn-submit" class="btn btn-gradient-primary me-2">Thêm mới</button>
                    <button type="reset" class="btn btn-light">Làm mới</button>
                </form>
            </div>
        </div>
    </div>
</div>