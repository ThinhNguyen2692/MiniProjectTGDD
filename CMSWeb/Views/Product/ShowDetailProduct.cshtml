@using DAL.Models;
@using CMSWeb.Models;
@model ListModel;
<div class="content-wrapper">
    <div style="width: 1300px; margin: auto;" class="grid-margin stretch-card">
        <div class="card ">
            <div class="card-body">

                <h2 style="text-align:center">Thông tin chi tiết sản phẩm</h2>
                <div>
                    <a href="/FormAddPhoto?ProductIdVersion=@Model.productVersionDetail.VersionId&ProductNameVersion=@Model.productVersionDetail.VersionName" class="btn btn-gradient-primary">Thêm ảnh cho sản phẩm</a>  <button class="btn btn-gradient-primary">Xem hình</button>  <a href="/DeleteProductVerSion?versionId=@Model.productVersionDetail.VersionId&productId=@Model.productVersionDetail.ProductId" class="btn btn-outline-danger" id="deleteProduct">Xóa</a>
                    <!-- The Modal -->
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    ...
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <br />
                <form class="forms-sample" id="form-Product" method="post" enctype="multipart/form-data" action="/UpdateProduct">
                    <div class="form-group">
                        <label for="exampleInputUsername1">Mã sản phẩm</label>
                        <input type="text" value="@Model.product.ProductId" readonly class="form-control" id="" name="ProductId" />
                    </div>
                    <div class="form-group">
                        <label>Tên sản phẩm</label>
                        <input type="text" value="@Model.product.ProuctName" class="form-control" id="" name="ProductName" />

                    </div>
                    <div class="form-group">
                        <label>Ngành hàng</label>
                        @{
                            foreach (var item in Model.productType)
                            {
                                if (item.Typeid == Model.product.ProductType)
                                {
                                    <input type="text" class="form-control" readonly value="@item.Typeid" id="ProductType" name="ProductType" />
                                }
                            }
                        }
                    </div>
                    <div class="form-group">
                        <label>Mã thương hiệu</label>
                        <br />
                        @{
                            foreach (var item in Model.productBrands)
                            {
                                if (item.BrandId == Model.product.ProductBrand)
                                {
                                    
                                    <input type="text" class="form-control" readonly value="@item.BrandId" id="ProductBrand" name="ProductBrand" />
                                }
                            }
                        }
                    </div>

                    <div class="form-group">
                        <label>Chọn hình: </label>
                        <br />
                        @Html.TextBox("fileImage", "", new { type = "file", accept = "image/*" })
                        <br />
                        <img id="preview" src="/images/@Model.product.ProductPhoto" width="auto" height="auto" class="hidden" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mô tả cho</label>
                        <textarea style="height: 100px;" name="ProductDescription" class="form-control" placeholder="Nhập mô tả cho thương hiệu...">@Model.product.ProductDescription</textarea>
                    </div>
                    <div class="form-group">
                        <label>Thời gian ra mắt</label>
                        @{
                            DateTime datetime = (DateTime)Model.product.ReleaseTime;
                        }
                        <input type="date" value="@datetime.ToString("yyyy-MM-dd")" class="form-control" id="ReleaseTime" name="ReleaseTime" />
                    </div>
                    <h3>Thông tin </h3>
                    <div class="form-group">
                        <label for="exampleInputUsername1">Mã phiên bản sản phẩm</label>
                        <input type="text" class="form-control" value="@Model.productVersionDetail.VersionId" readonly id="VersionId" name="VersionId" />
                    </div>
                    <div class="form-group">
                        <label>Tên phiên bản sản phẩm</label>
                        <input type="text" value="@Model.productVersionDetail.VersionName" class="form-control" id="VersionName" name="VersionName" />

                    </div>
                    <div class="form-group">
                        <label>Giá sản phẩm</label>
                        <input type="number" class="form-control" name="ProductPrice" id="ProductPrice" min="100" max="9000000000" step="100" value="@Model.productVersionDetail.ProductPrice">

                    </div>

                    <div class="form-group">
                        <label>Trạng thái</label>
                        <select class="form-control" name="ProductStatus" id="ProductStatus">
                            @{
                                if (@Model.productVersionDetail.ProductStatus == 1)
                                {
                                    <option value="1">Trạng thái bình thường</option>
                                }
                            }
                            <option value="1">Trạng thái bình thường</option>
                            <option value="0">Ngưng khinh doanh</option>
                        </select>
                    </div>



                    @{

                        foreach (var item in Model.propertiesValues)
                        {
                            <div class="tag-informationType">
                             <label>  @item.Properties.PropertiesName :  <input style="width:100px; margin-right:40px;" value=" @item.Properties.PropertiesId" name="PropertiesId" readonly class="form-control InputProperty" type="text" /> </label> 
                                <label>  Mã : <input style="width:100px; margin-right:40px;" value="@item.ValueId" name="ValueId" readonly class="form-control InputProperty" type="text" /> </label> 
                                <label> Thông tin:<input style="width:400px; margin-right:40px;" value="@item.Value" name="Value" class="form-control InputProperty" type="text" /></label>
                                </div>
                        }
                    }

                    <div>
                        <h3>
                            Số lượng
                        </h3>
                        @{
                            foreach (var item in Model.versionQuantities)
                            {
                              <label>Mã: <input style="width:100px;" readonly value="@item.Id" class="form-control input-quantity" type="number" name="Id" /></label>
                              <label>@item.Color.ColorDescription: <input style="width:100px;" readonly value="@item.ColorId" class="form-control input-quantity" type="number" name="ColorId" /></label>
                                <label>Số lượng: <input style="width:300px;" min="0" max="9000000000" step="100" value="@item.Quantity" name="Quantity" class="form-control input-quantity" type="number" /></label>
                            }
                        }

                    </div>
                    <br />

                    <button type="submit" id="btn-submit" class="btn btn-gradient-primary me-2">Cập nhật thông tin</button>
                </form>

                <br />
               
            </div>

        </div>
    </div>
</div>
