

<div class="content-wrapper">
    <div style="width: 1200px; margin: auto;" class="grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                
                   
                    <form class="forms-sample" id="form-Product" method="post" enctype="multipart/form-data" action="/AddProduct">
                        <div class="form-group">
                            <label for="exampleInputUsername1">Mã sản phẩm</label>
                            <input type="text" value="@ViewBag.data.ProductId" readonly class="form-control" id="" name="ProductId" />
                        </div>
                        <div class="form-group">
                            <label >Tên sản phẩm</label>
                            <input type="text" value="@ViewBag.data.Product.ProuctName" class="form-control" id="" name="ProductName"/>
                           
                        </div>
                         <div class="form-group">
                             <label >Ngành hàng</label>
                        @{
                            foreach (var item in ViewBag.DataType)
                            {
                                if (item.Typeid == ViewBag.data.Product.ProductType)
                                {
                                            <input type="text" class="form-control" readonly value="@item.Typename" id="" name=""/>
                                }
                            }
                        }
                        </div> 
                        <div class="form-group">
                             <label >Thương hiệu</label>
                           @{
                            foreach (var item in ViewBag.DataBrands)
                            {
                                if (item.BrandId == ViewBag.data.Product.ProductBrand)
                                {
                                            <input type="text" class="form-control" readonly value="@item.BrandName" id="" name=""/>
                                }
                            }
                        }
                        </div>
                        <div class="form-group">
                            <label>Chọn hình: </label>
                            <br />
                            @Html.TextBox("fileImage", "", new { type = "file", accept = "image/*" })
                            <br />
                            <img id="preview" src="/images/@ViewBag.data.Product.ProductPhoto" width="auto" height="auto" class="hidden" />

                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mô tả cho</label>
                            <textarea style="height: 100px;" name="ProductDescription" class="form-control" placeholder="Nhập mô tả cho thương hiệu..." >@ViewBag.data.Product.ProductDescription</textarea>
                        </div>
                         <div class="form-group">
                            <label >Thời gian ra mắt</label>
                            <input type="date" value="@ViewBag.data.Product.ReleaseTime.ToString("yy/MM/yyyy")" class="form-control" id="" name="ProductDate"/>
                        </div>
                         <button type="submit" id="btn-submit"  class="btn btn-gradient-primary md-2">Cập nhật</button>
                    </form>
                    <br />
                    <br />
                    <form class="forms-sample" id="form-Product" method="post" enctype="multipart/form-data" action="/">
                       <h3>Thông tin </h3>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Mã phiên bản sản phẩm</label>
                            <input type="text" class="form-control" value="@ViewBag.data.VersionId" readonly id="VersionID" name="VersionID" />
                        </div>
                        <div class="form-group">
                            <label>Tên phiên bản sản phẩm</label>
                            <input type="text" value="@ViewBag.data.VersionName" class="form-control" id="VersionName" name="VersionName" />

                        </div>
                        <div class="form-group">
                            <label>Giá sản phẩm</label>
                            <input type="number" class="form-control" name="" id="VersionPrice" min="100" max="9000000000" step="100000" value="@ViewBag.data.ProductPrice">

                        </div>

                        <div class="form-group">
                            <label>Trạng thái</label>
                            <select class="form-control" name="VersionStatus" id="VersionStatus">
                            @{
                                if(@ViewBag.data.ProductStatus == 1)
                                {
                                            <option value="1">Trạng thái bình thường</option>
                                }
                            }
                                <option value="1">Trạng thái bình thường</option>
                                <option value="0">Ngưng khinh doanh</option>
                            </select>
                        </div>

                       

                    @{
                        
                        foreach (var item in ViewBag.ProperyValue)
                        {

                                    <div class="tag-informationType">

                                        <h3> @item.Properties.PropertiesName </h3>
                                        <label><input style="width:500px; margin-right:40px;" value="@item.Value" class="form-control InputProperty" type="text" />   <a href="" class="btn btn-gradient-primary" >Cập nhật</a></label>
                                    </div>
                        }
                    }

                    <div>
                        <h3>
                            Số lượng
                        </h3>
                        @{
                            foreach (var item in ViewBag.DataQuantity)
                            {
                                                            <h3  class="list-color-id">Mã màu: @item.Color.ColorDescription </h3>
                                                            <label><input style="width:500px;" min="0" max="9000000000" step="100" value="@item.Quantity" class="form-control input-quantity" type="number" /></label>
                            }
                        }

                    </div>
                         <br />
                        

                    </form>
                   
                    <a href="/DeleteProductVerSion?id=@ViewBag.data.VersionId" class=" btn btn-gradient-primary">Làm mới</a>
                
            </div>
        </div>
    </div>
</div>
