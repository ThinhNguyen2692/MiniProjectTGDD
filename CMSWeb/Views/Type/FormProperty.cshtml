@using ModelProject.ViewModel;
@model CreateInformationProperty;
<div class="content-wrapper">
    <div style="width: 1200px; margin: auto;" class="grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Nhập thông tin thông số kỹ thuật  pr</h4>
                @using(Html.BeginForm("AddProperty","Type", FormMethod.Post,new { @class="forms-sample",enctype="multipart/form-data", id="form-add-properties" }))
                {
                    @Html.AntiForgeryToken()
                 <div class="form-group">
                        <label for="exampleInputUsername1">Mã thông số</label>
                        @Html.TextBoxFor(m => m.SpecificationId, new{@class="form-control", @readonly="True"} )

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên thuộc tính</label>
                        
                        @Html.TextBoxFor(m => m.InformationPropertyName, new{@class="form-control"})
                        <div class="valid-feedback">
                            Chính xác!
                        </div>
                        <div class="invalid-feedback">
                           Không được bỏ trống
                        </div>
                    </div>
                     <div class="form-group">
                        <label for="exampleInputUsername1">Mã thông số</label>
                        @Html.TextBoxFor(m => m.Description, new{@class="form-control"} )

                    </div>
                     <button type="submit" class="btn btn-gradient-primary me-2">Thêm mới</button>
                    <button type="reset" class="btn btn-light">Làm mới</button>

                }
                <br /> 
                        <a class="btn btn-outline-danger" href="/FormSpecification?TypeId=@Model.typeId">Kết thúc nhập</a>
                         <a class="btn btn-outline-danger"href="/ShowTypeDetail?typeid=@Model.typeId">Xem chi tiết</a>
             </div>
        </div>
    </div>
</div>