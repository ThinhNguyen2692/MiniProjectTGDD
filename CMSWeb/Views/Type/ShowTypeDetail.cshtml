@using CMSWeb.ViewModels.ProductTypeViewModel;
@model ProductTypeDetail;
<div class="content-wrapper">
    <div style="width: 1200px; margin: auto;" class="grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Nhập ngành hàng mới</h4>
                @{
                    switch (Model.message)
                    {
                        case true:
                            <div class="alert alert-success">Cập nhật thành công</div>
                            break;
                            
                        default: break;
                    }
                }
                <form class="forms-sample" asp-action="UpdataType" asp-controller="Type" method="post" id="form-add-type">

                    <div class="form-group">
                        <label asp-for="@Model.productType.Typeid">Mã ngành hành</label>
                        <input class="form-control" readonly asp-for="@Model.productType.Typeid" />
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Error...
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Ngành hàng</label>
                        <input asp-for="@Model.productType.Typename" class="form-control" />
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Error...
                        </div>
                    </div>
                   
                    <a class="btn btn-outline-danger" href="/FormSpecification?typeid=@Model.productType.Typeid">Thêm</a>
                    <a class="btn btn-outline-danger" href="/DeleteType?typeid=@Model.productType.Typeid">Xóa</a>
                   
                    <br />
                    <br />
                    <br />
                    

                @{
                    foreach (var item in Model.productType.ProductSpecifications)
                    {
                           <label>Mã: <input class="form-control" readonly style="width: 100px;" asp-for="@item.SpecificationsId" /> </label>  <label style="margin-left: 30px;margin-right: 515px;">Thông số:  <input class="form-control " asp-for="@item.SpecificationsName" /></label> <a href="/ShowFormSpecification?idSpecification=@item.SpecificationsId&TypeId=@Model.productType.Typeid" class="btn btn-outline-danger">Thêm</a> <a href="/DeleteSpecification?id=@item.SpecificationsId&typeid=@Model.productType.Typeid" class="btn btn-outline-danger">Xóa</a>
                            <br />
                            <br />
                        foreach (var value in item.InformationProperties)
                        {
                           
                                    <label style="margin-left: 20px;">Mã: <input style="width: 100px;" asp-for="@value.PropertiesId" class="form-control"  readonly /></label>  <label style="margin-left: 30px;margin-right: 30px;">Thuộc tính:  <input asp-for="@value.PropertiesName" class="form-control" /></label> <label style="margin-right: 485px;">Đơn vị: <input style="width: 100px;" class="form-control" asp-for="@value.PropertiesDescription" /></label> <a href="/DeleteProperty?id=@value.PropertiesId&typeid=@Model.productType.Typeid" class="btn btn-outline-danger">Xoá</a>
                            

                        }
                     
                    }
                }
                <br />
                <br />
                <br />
                   <button type="submit" class="btn btn-gradient-primary">Cập nhật</button>
                   </form>

            </div>

        </div>

    </div>
</div>



