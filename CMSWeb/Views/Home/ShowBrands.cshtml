@using ModelProject.ViewModel;
@model List<ShowBrandsViewModel>;

<div class="content-wrapper">
   
    <div class="page-header">
        <h4>Thương hiệu</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Thương hiệu</a></li>
                <li class="breadcrumb-item active" aria-current="page">Basic tables</li>
            </ol>
        </nav>
    </div>
    <div style="padding-bottom: 10px;">
        <a class="nav-link" asp-controller="Home" asp-action="FormBrands">
            <button type="button" class="btn btn-outline-danger">
                Thêm thương hiệu
            </button>
        </a>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
              @* @switch (Model.message)
                {
                    case "BrandRemoveFales": <div class="alert alert-danger">Xóa thất bại</div> break;
                    case "BrandRemoveTrue": <div class="alert alert-success">Xóa thành công</div> break;
                    default: <div></div> break;
                }*@
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> Logo </th>
                        <th> Mã thương hiệu </th>
                        <th> Tên thương hiệu </th>
                        <th> Trạng thái </th>
                        <th></th>

                    </tr>
                </thead>
                <tbody class="value-brands">
                    @{
                        foreach (var item in Model)
                        {
                                            <tr>
                                                <td class="Img-Name">
                                                    <img id="img-delete" style="width:100px; height: 100px; border-radius: 0;" src="/images/Logo/@item.BrandPhoto" />
                                                </td>
                                                <td> @item.BrandId </td>
                                                <td>
                                                    @item.BrandName
                                                </td>
                                                @{
                                   
                                                             <td>@item.GetStatus(item.BrandStatus)</td>
                                                }
                                                <td style=" width:200px;">
                                                    <div class="Action">
                                                        <a class="btn btn btn-outline-danger"  asp-action="ShowDetail" asp-controller="Home" asp-route-idBrands="@item.BrandId">
                                                                Cập nhật
                                                        </a>
                                                         <a asp-action="RemoveBrands" asp-controller="Home" asp-route-id="@item.BrandId" class="btn btn-outline-danger">Xóa</a>
                                                    </div>

                                             </td>
                                      </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
    

<!-- content-wrapper ends -->
