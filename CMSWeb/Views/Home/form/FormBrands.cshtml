<div class="content-wrapper">
    <div style="width: 1200px; margin: auto;" class="grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                
                <h2 style="text-align:center;" class="card-title">Nhập thông tin thương hiệu mới</h2>
                @{
                    if (ViewData["message"] != null)
                    {
                        <h4 style="text-align:center; color:red;">@ViewData["message"]</h4>
                    }
                }
                
                <form class="forms-sample" id="form-brands" method="post" enctype="multipart/form-data" action="/AddBrands">

                    <div class="form-group">
                        <label for="exampleInputUsername1">Mã thương hiệu</label>
                        <input type="text" class="form-control" id="BransId" placeholder="Nhập mã thương hiệu" name="BrandId" />
                        <div class="valid-feedback">
                            Chính xác
                        </div>
                        <div class="invalid-feedback">
                            Mã thương hiệu: a-z,A-Z,0-9
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên thương hiệu</label>
                        <input type="text" class="form-control" placeholder="Nhập tên thương hiệu" id="BrandsName" name="BrandName" />
                        <div class="valid-feedback">
                            Chính xác
                        </div>
                        <div class="invalid-feedback">
                            Không được bỏ trống
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Nhập mô tả cho</label>
                        <textarea style="height: 100px;" name="BrandDescription" id="BrandDescription" class="form-control" placeholder="Nhập mô tả cho thương hiệu..."></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Trạng thái thương hiệu</label>
                        <select name="BrandStatus" class="form-control" id="BrandStatus">
                            <option value="1">Trạng thái bình thường</option>
                            <option value="0">Tạm ngưng kinh doanh</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <h4>Logo thương hiệu</h4>
                        @Html.TextBox("fileImage" ,"", new { type = "file", accept = "image/*" })
                        <br />
                        <br />
                        <img id="preview" src="#" width="auto" height="auto" class="hidden" />
                    </div>
                    <button type="submit" id="btn-submit" class="btn btn-gradient-primary me-2">Thêm mới</button>
                    <button type="reset" class="btn btn-light">Làm mới</button>
                </form>
            </div>
        </div>
    </div>
</div>