@using ModelProject.Models;
@using CMSWeb.ViewModels.CustomerViewModel;
@model CustomerDetailViewModel;

<div class="content-wrapper">
    <div style="width: 1200px; margin: auto;" class="grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                
                <h2 style="text-align:center;" class="card-title">Nhập thông tin khách hàng</h2>
                 @switch (Model.message)
                {
                    case true: <div class="alert alert-success">Cập nhật thành công</div> break;
                    default: <div></div> break;
                }

                @using (Html.BeginForm("UpdateCustomer", "Customer", FormMethod.Post, new {  @class="forms-sample", id="form-brands" }))
                {
                  
                     <div class="form-group">
                        <label>Số điện thoại</label>
                      @Html.TextBoxFor(m => m.createCustomer.CustomerPhone, new {@class="form-control", @readonly="true"})
                        <div class="valid-feedback">
                            Chính xác
                        </div>
                        <div class="invalid-feedback">
                            Mã thương hiệu: a-z,A-Z,0-9
                        </div>
                    </div>
                       <div class="form-group">
                        <label>Tên khách hàng</label>
                         @Html.TextBoxFor(m => m.createCustomer.CustomerName, new {@class="form-control"})
                        <div class="valid-feedback">
                            Chính xác
                        </div>
                        <div class="invalid-feedback">
                            Không được bỏ trống
                        </div>
                    </div>
                      
                           <div class="form-group">
                        <label>Tỉnh - Thành phố</label>
                          @Html.TextBoxFor(m => m.createCustomer.ProvinceCity, new {@class="form-control"})
                        <div class="valid-feedback">
                            Chính xác
                        </div>
                        <div class="invalid-feedback">
                            Không được bỏ trống
                        </div>
                    </div>
                       <div class="form-group">
                        <label>Quận - huyện</label>
                           @Html.TextBoxFor(m => m.createCustomer.District, new {@class="form-control"})
                        <div class="valid-feedback">
                            Chính xác
                        </div>
                        <div class="invalid-feedback">
                            Không được bỏ trống
                        </div>
                    </div>
                              <div class="form-group">
                        <label>Xã</label>
                         @Html.TextBoxFor(m => m.createCustomer.CommuneWard, new {@class="form-control"})
                        <div class="valid-feedback">
                            Chính xác
                        </div>
                        <div class="invalid-feedback">
                            Không được bỏ trống
                        </div>
                    </div>
                       
                       <div class="form-group">
                        <label>Địa chỉ</label>
                        @Html.TextBoxFor(m => m.createCustomer.CustomerAddress, new {@class="form-control"})
                        <div class="valid-feedback">
                            Chính xác
                        </div>
                        <div class="invalid-feedback">
                            Không được bỏ trống
                        </div>
                    </div>
                    
                      <div class="form-group">
                        <label>Lần cuối đăng nhập</label>
                        <br />
                         @Html.TextBoxFor(m => m.createCustomer.RegistrationTime, new {@class="form-control", @readonly="True"})
                        <div class="valid-feedback">
                            Chính xác
                        </div>
                        <div class="invalid-feedback">
                            Không được bỏ trống
                        </div>
                    </div>
                     <button type="submit" id="btn-submit" class="btn btn-gradient-primary me-2">Cập nhật</button>
                    <button type="reset" class="btn btn-light">Làm mới</button>
                }
            </div>
        </div>
    </div>
</div>