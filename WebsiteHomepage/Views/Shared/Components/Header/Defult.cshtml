@using ModelProject.ViewModel;
@model HeaderViewModel;


<header class="header trans_300">

    <!-- Top Navigation -->
    <!-- Main Navigation -->

    <div class="main_nav_container">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-right">
                    <div class="logo_container">
                        <a href="#">colo<span>shop</span></a>
                    </div>
                    <nav class="navbar">
                        <ul class="navbar_menu">
                            <li><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
                            <li class="currency li-header">
                                Thương hiệu
                                <i class="fa fa-angle-down"></i>
                                <ul class="currency_selection">
                                    @foreach (var item in Model.showBrandsViewModels)
                                    {
                                        <li>
                                           
                                            <a asp-action="ListProduct" asp-controller="Home" asp-route-id="@item.BrandId">
                                                <img style="display: block;max-width:230px; max-height:95px;width: auto;height: auto;" src="@item.BrandPhoto" />
                                            </a>
                                        </li>
                                    }

                                </ul>
                            </li>
                            <li></li>
                            <li class="currency li-header">
                                Ngành hàng
                                <i class="fa fa-angle-down"></i>
                                <ul class="currency_selection">
                                    @foreach (var item in Model.listProductTypeViewModels)
                                    {

                                        <li> @Html.ActionLink(item.TypeName,"ListProduct", "Home", new {id = item.TypeId}, null)</li>
                                    }

                                </ul>
                            </li>
                            <li class="account li-header">
                                Tài khoản <i class="fa fa-angle-down"></i>
                                <ul class="account_selection">
                                    <li><a href="#"><i class="fa fa-sign-in" aria-hidden="true"></i>Đăng nhập</a></li>
                                    <li><a href="#"><i class="fa fa-user-plus" aria-hidden="true"></i>Đăng xuất</a></li>
                                </ul>
                            </li>

                        </ul>
                        <ul class="navbar_menu">
                            <form class="form-inline" method="get" asp-controller="Home" asp-action="GetDataSeach">
                                <input list="browsers" style="width: 228px; display: inline;" class="form-control mr-sm-2" type="search" name="key" placeholder="Search" aria-label="Search">
                                <datalist id="browsers">

                                </datalist>
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                            </form>

                        </ul>
                        <ul class="navbar_user">
                            <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-user" aria-hidden="true"></i></a></li>
                            <li class="checkout">
                                
                                <a asp-action="Index" asp-controller="Cart">
                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                    <span id="checkout_items" class="checkout_items"></span>
                                </a>
                            </li>

                        </ul>

                        <div class="hamburger_container">
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>

</header>
