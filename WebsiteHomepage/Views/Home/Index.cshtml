@using ModelProject.ViewModel;
@model HomeViewModel;
@{}

@section css{
		<style>
			.owl-prev {
	position: absolute;
	left: -20px;
	top: -230px;
	height: 100px;
	width: 50px;
}

.owl-next {
	position: absolute;
	right: -20px;
	top: -230px;
	height: 100px;
	width: 50px;
}

.item-owl-button {
	position: absolute;
	bottom: 25px;
	left: 10px;
	font-size: 2rem;
}
		</style>
}
	<!-- Slider -->

	<div class="main_slider" style="background-image:url(template/images/slider_1.jpg)">
		<div class="container fill_height">
			<div class="row align-items-center fill_height">
				<div class="col">
					<div class="main_slider_content">
						<h6>Spring / Summer Collection 2017</h6>
						<h1>Get up to 30% Off New Arrivals</h1>
						<div class="red_button shop_now_button"><a href="#">shop now</a></div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<!-- Best Sellers -->

	<div class="best_sellers">
		<div class="container">
			<div class="row">
				<div class="col text-center">
					<div class="section_title new_arrivals_title">
						<h2>Sản phẩm khuyến mãi</h2>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<div class="product_slider_container">
						<div class="owl-carousel owl-theme product_slider_1">
							<!-- Slide 1 -->
							@{
								foreach (var item in Model.ProductSale)
								{
												<div class="owl-item product_slider_item">
													<div class="product-item women">
														<div class="product product_filter">
															<div class="product_image">
																<img style="width:221px; height: 221px;" src="@item.ProductPhoto" alt="@item.VersionName">
															</div>
															<div class="favorite"></div>
															<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>@item.ProductSale %</span></div>
															<div class="product_info">
														<h6 class="product_name"><a asp-action="ProductDetail" asp-controller="Home" asp-route-idProduct="@item.VersionId">@item.VersionName</a></h6>
																<div class="product_price">@item.ProductPrice</div>
															</div>
														</div>
													</div>

												</div>
							}
							}
						

						
						<!-- Slider Navigation -->

					
					</div>
				</div>
			</div>

			
		</div>
	</div>
</div>
